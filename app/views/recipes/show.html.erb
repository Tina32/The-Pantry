<div class="page-header">
  <%= link_to recipes_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_recipe_path(@recipe), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show recipe</h1>
</div>

<div class= "recipes">
<div class="title"><h1><%= @recipe.title %></h1></div>


 <div class= "ingredients"><%= @recipe.ingredients %></div>


 <div class= "ingredients"><%= @recipe.instructions %></div>

 <div class= "ingredients"><%= @recipe.servings %></div>

</div>
