<div class="page-header">
  <%= link_to new_recipe_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Recipe
  <% end %>
  <h1>My Recipes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Ingrediants</th>
            <th>Instructions</th>
            <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @recipes) do |recipe| %>
            <td><%= recipe.title %></td>
            <td>
            <%= link_to("/recipes/#{recipe.id}/toggle_completed") do %>
             <% if recipe.completed %>
               <span class="glyphicon glyphicon-ok"></span>
             <% else %>
               <span class="glyphicon glyphicon-unchecked"></span>
             <% end %>
             <% end %>
           </td>
           <td><%= recipe.instructions %></td>
           <td><%= link_to 'Show', recipe %></td>
       <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
       <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <% end %>
   </tbody>
 </table>
 </div>

